<div class="col-12 col-md-6 order-md-6 p-0" />
  {% if background_url is defined and background_url %}
    <img src="{{ background_url }}" />
  {% endif %}
</div>
<div class="col-12 col-md-6 order-md-1 p-4">
  <h2>{{ paragraph.field_header_text.getValue[0].value }}</h2>
  {{ content.field_body_text }}
  <a href="{{ button_url }}" class="btn btn-primary link-button h-auto w-100">
    <span>{{ paragraph.field_button.getValue[0].title }}</span>
  </a>
</div>
