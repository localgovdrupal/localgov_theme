<header class="bg-primary">
  <nav class="navbar navbar-expand-lg navbar-dark site-max nav-vanilla">

    <!-- Navbar content -->
    {{ page.header }}

    <div class="d-lg-none">
      <!-- Mobile toggle button -->
      <button id="js-nav-toggle" class="btn navbar-toggler" type="button" aria-label="Toggle navigation">
        <span class="fa fa-times d-none"></span>
        <span class="fa fa-bars fa-1x"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="menu-purejs">
      <div class="d-lg-none">
      {{ page.search }}
      </div>
      {{ page.primary_menu }}
      {{ page.secondary_menu }}
      <div class="d-none d-lg-block">
        <div class="form-inline">
        {{ page.mobile_search }}
        </div>
      </div>
    </div>
  </nav>

  <!-- Toggle Menu -->
  <nav class="header--expand site-max header--toggle mt-2">
    <div class="row">
      <div class="col-md-12 p-4">
      {{ page.primary_menu }}
      </div>
      {{ page.secondary_menu }}
    </div>
  </nav>
</header>
